    function arrayToHashtagString(array) {
        
        let string = '';
        
        if (array.constructor !== Array) {
            string = array;
        }

        if (array && array.length > 0) {
            string = array.join(' #');
            string = '#' + string; 
        } 
        else {
            string = '';
        }

        return string;
        
    }

