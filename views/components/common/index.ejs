                    palette = new DistinctColors({count: colors + 1, lightMin: 75, lightMax: 95, chromaMin: 1, chromaMax: 8});
                }
                else {
                    palette = new DistinctColors({count: colors + 1, lightMin: 40, lightMax: 60, chromaMin: 1, chromaMax: 2});
